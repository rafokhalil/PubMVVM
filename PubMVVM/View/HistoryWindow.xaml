<Window x:Class="PubMVVM.View.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PubMVVM.View"
        mc:Ignorable="d"
        Title="HistoryWindow" Height="450" Width="490">
    <StackPanel 
         Background="{StaticResource SpecialGradient}">
        <ListBox Background="{StaticResource SpecialGradient}"
                 Name="historyListbox"
                 FontSize="26"
                 ItemsSource="{Binding PubsHistory}">
        </ListBox>
        <TextBlock FontFamily="Verdana"
                       FontSize="26"
                       Text="Thanks for buying"
                       HorizontalAlignment="Center"
                   Foreground="{StaticResource RedGradientBrush}">

        </TextBlock>
    </StackPanel>
</Window>
